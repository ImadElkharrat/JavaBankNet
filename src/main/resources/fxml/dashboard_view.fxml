<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefHeight="600.0" prefWidth="900.0" stylesheets="@../css/style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bank.view.DashboardController">

    <left>
        <VBox prefWidth="240.0" spacing="20.0" styleClass="sidebar" BorderPane.alignment="CENTER">
            <padding>
                <Insets bottom="30.0" left="20.0" right="20.0" top="30.0" />
            </padding>
            <children>
                <Label styleClass="sidebar-label" text="JavaBank" textFill="WHITE" />
                <Region prefHeight="20.0" />

                <Label text="SÉLECTIONNEZ UN COMPTE :" textFill="#94a3b8">
                    <font><Font size="10.0" /></font>
                </Label>

                <ListView fx:id="accountsList" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS" />

                <Button maxWidth="Infinity" onAction="#handleLogout" styleClass="danger-btn" text="Déconnexion" />
            </children>
        </VBox>
    </left>

    <center>
        <VBox spacing="20.0" style="-fx-background-color: #f1f5f9;">
            <padding>
                <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
            </padding>
            <children>

                <HBox alignment="CENTER_LEFT">
                    <children>
                        <VBox>
                            <Label fx:id="welcomeLabel" text="Bonjour," textFill="#0f172a">
                                <font> <Font name="System Bold" size="28.0" /> </font>
                            </Label>
                            <Label text="Voici l'historique de vos transactions." textFill="#64748b" />
                        </VBox>
                        <Region HBox.hgrow="ALWAYS" />
                        <Button fx:id="adminBatchButton" onAction="#handleBatch" styleClass="danger-btn" text="ADMIN: Import CSV" visible="false" />
                    </children>
                </HBox>

                <HBox spacing="15.0">
                    <children>
                        <Button onAction="#handleRefresh" text="Actualiser" />
                        <Button maxWidth="Infinity" onAction="#handleTransfer" styleClass="action-btn" text="+ Nouveau Virement" />
                    </children>
                </HBox>

                <VBox styleClass="card" VBox.vgrow="ALWAYS">
                    <children>
                        <Label text="Historique des mouvements" textFill="#0f172a">
                            <font> <Font name="System Bold" size="16.0" /> </font>
                        </Label>
                        <Region prefHeight="10.0" />

                        <TableView fx:id="historyTable" VBox.vgrow="ALWAYS">
                            <columns>
                                <TableColumn fx:id="colDate" prefWidth="150.0" text="Date / Heure" />
                                <TableColumn fx:id="colType" prefWidth="100.0" text="Type" />
                                <TableColumn fx:id="colSource" prefWidth="120.0" text="Source" />
                                <TableColumn fx:id="colDest" prefWidth="120.0" text="Destination" />
                                <TableColumn fx:id="colAmount" prefWidth="100.0" style="-fx-alignment: CENTER-RIGHT; -fx-font-weight: bold;" text="Montant" />
                            </columns>
                            <columnResizePolicy>
                                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                            </columnResizePolicy>
                        </TableView>
                    </children>
                </VBox>

            </children>
        </VBox>
    </center>
</BorderPane>