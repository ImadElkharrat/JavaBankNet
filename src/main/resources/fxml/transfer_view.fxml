<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bank.view.TransferController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Effectuer un Virement">
        <font>
            <Font name="System Bold" size="16.0" />
        </font>
    </Label>

    <TextField fx:id="sourceField" promptText="Compte Source (ex: FR76-ALICE)" />
    <TextField fx:id="destField" promptText="Compte Destination (ex: FR76-BOB)" />
    <TextField fx:id="amountField" promptText="Montant (ex: 500.00)" />

    <Label fx:id="statusLabel" textFill="RED" />

    <Button onAction="#handleConfirm" text="Valider le Virement"
            style="-fx-background-color: #28a745; -fx-text-fill: white;" prefWidth="200.0" />
</VBox>